@model TestCSharp.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" /> 
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>User</h4>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Lastname</dt>
            <dd class="col-sm-10">@Model.Lastname</dd>
            <dt class="col-sm-2">Firstname</dt>
            <dd class="col-sm-10">@Model.Firstname</dd>
            <dt class="col-sm-2">Middlename</dt>
            <dd class="col-sm-10">@Model.Middlename</dd>
            <dt class="col-sm-2">Plant</dt>
            <dd class="col-sm-10">@Model.Plant</dd>
            <dt class="col-sm-2">Department</dt>
            <dd class="col-sm-10">@Model.Department</dd>
            <dt class="col-sm-2">Position</dt>
            <dd class="col-sm-10">@Model.Position</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>
