@model TestCSharp.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Delete User</title>
    <link rel="stylesheet" href="~/css/site.css" /> 
</head>
<body>
    <h1>Delete User</h1>

    <h4>User</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Lastname</dt>
        <dd class="col-sm-10">@Model.Lastname</dd>
        <dt class="col-sm-2">Firstname</dt>
        <dd class="col-sm-10">@Model.Firstname</dd>
        <dt class="col-sm-2">Middlename</dt>
        <dd class="col-sm-10">@Model.Middlename</dd>
        <dt class="col-sm-2">Plant</dt>
        <dd class="col-sm-10">@Model.Plant</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</body>
</html>
